services:
  app:
    image: docker-nextjs-prod
    build:
      context: .
      dockerfile: Dockerfile.production
    ports:
      - 3000:3000
  db:
    image: postgres:14.1-alpine
    restart: always
    environment:
      - POSTGRES_USER=postgres
      - POSTGRES_PASSWORD=postgres
    volumes: 
      - db:/var/lib/postgresql/data
volumes:
  db: